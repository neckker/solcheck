{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "solcheck",
    "version": "0.1.0",
    "identifier": "com.solcheck.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "solcheck",
                "width": 400,
                "height": 200,
                "decorations": false,
                "transparent": true,
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico"
        ]
    }
}
